@page
@model IndexModel
@{
    ViewData["Title"] = "Welcome";
}


<link rel="stylesheet" href="~/css/floating.css" />
<script src="~/js/index.js"></script>

<body style="text-align: center">
    <h1 class="display-4">Welcome</h1>
    <img class="mb-4" src="~/media/estacion.jfif" style="border-radius: 22%" alt="" width="72" height="72">

    <form class="form-signin">
        <h1 class="h3 mb-3 font-weight-normal">Please Sign In</h1>
        <label for="inputEmail" class="sr-only">Email Address</label>
        <input type="email" id="inputEmail" style="margin-bottom: 14px" class="form-control" placeholder="Email Address"
            required autofocus>
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" id="inputPassword" class="form-control" placeholder="Password" required>
        <div class="form-check" style="margin: 13px 0px 16px">
            <input class="form-check-input" style="margin-top: 6px" type="checkbox" value="remember-me" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
                Remember Me
            </label>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign In</button>
    </form>
</body>
