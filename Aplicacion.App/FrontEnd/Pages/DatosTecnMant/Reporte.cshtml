@page
@model FrontEnd.Pages.ReporteModel
@{
    ViewData["Title"] = "REPORTES ";
}


<div class="container py-3">
    <header>
        <div class="pricing-header p-3 pb-md-4 mx-auto text-center">
            <h1 class="display-4 fw-normal">@ViewData["Title"]</h1>
            <p class="fs-5 text-muted">Visualización y monitoreo de los reportes</p>
        </div>
    </header>

    <main>
        <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
            <div class="col">
                <div class="card mb-4 rounded-3 shadow-sm">
                    <div class="card-header py-3">
                        <h4 class="my-0 fw-normal">Ingresar Reporte</h4>
                    </div>
                    <div class="card-body">
                        <i class="bi bi-shop-window" style="font-size: 50px"></i>
                        <ul class="list-unstyled mt-3 mb-4">
                            <li>Ingresa el reporte</li>
                            <li>de una Estación Meteorológica</li>
                            <li>nuevo</li>
                        </ul>
                        <a type="button" class="w-100 btn btn-lg btn-outline-primary" asp-area="" asp-page="./IngReporte">Comenzar</a>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card mb-4 rounded-3 shadow-sm">
                    <div class="card-header py-3">
                        <h4 class="my-0 fw-normal">Editar Reporte</h4>
                    </div>
                    <div class="card-body">
                        <i class="bi bi-sliders" style="font-size: 50px"></i>
                        <ul class="list-unstyled mt-3 mb-4">
                            <li>Edita los reportes de una</li>
                            <li>Estación Meteorológica</li>
                            <li>existente</li>
                        </ul>
                        <a type="button" class="w-100 btn btn-lg btn-primary" asp-area="" asp-page="./EditarReporte">Actualizar</a>
                    </div>
                </div>
            </div>
             <div class="col">
                <div class="card mb-4 rounded-3 shadow-sm">
                    <div class="card-header py-3">
                        <h4 class="my-0 fw-normal">Consultar</h4>
                    </div>
                    <div class="card-body">
                        <i class="bi bi-sliders" style="font-size: 50px"></i>
                        <ul class="list-unstyled mt-3 mb-4">
                            <li>Consulta los reportes de una</li>
                            <li>Estación Meteorológica</li>
                            <li>existente</li>
                        </ul>
                        <a type="button" class="w-100 btn btn-lg btn-primary" asp-area="" asp-page="./ConsultarReporte">Actualizar</a>
                    </div>
                </div>
            </div>
            
        </div>
    </main>
</div>