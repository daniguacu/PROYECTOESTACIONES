@page
@model FrontEnd.Pages.TecnMantModel
@{
    ViewData["Title"] = "Técnico de Mantenimiento";
}

<div class="container py-3">
    <header>
        <div class="pricing-header p-3 pb-md-4 mx-auto text-center">
            <h1 class="display-4 fw-normal">@ViewData["Title"]</h1>
            @* <p class="fs-5 text-muted">Visualización de los Técnicos de Mantenimiento</p> *@
        </div>
    </header>

    <main>
        <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
            <div class="col">
                <div class="card mb-4 rounded-3 shadow-sm">
                    <div class="card-header py-3">
                        <h4 class="my-0 fw-normal">Crear Perfil</h4>
                    </div>
                    <div class="card-body">
                        <i class="bi bi-person-plus" style="font-size: 50px"></i>
                        <ul class="list-unstyled mt-3 mb-4">
                            <li>Agregar una nueva</li>
                            <li>instancia de Técnico</li>
                        </ul>
                        <a type="button" class="w-100 btn btn-lg btn-outline-primary" asp-area="" asp-page="./CrearTecnMant">Comenzar</a>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card mb-4 rounded-3 shadow-sm">
                    <div class="card-header py-3">
                        <h4 class="my-0 fw-normal">Editar Perfil</h4>
                    </div>
                    <div class="card-body">
                        <i class="bi bi-input-cursor-text" style="font-size: 50px"></i>
                        <ul class="list-unstyled mt-3 mb-4">
                            <li>Editar una instancia</li>
                            <li>existente de Técnico</li>
                        </ul>
                        <a type="button" class="w-100 btn btn-lg btn-primary" asp-area="" asp-page="./EditTecnMant">Actualizar</a>
                    </div>
                </div>
            </div>
